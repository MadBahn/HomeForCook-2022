/* 水平间距 */
.uni-common-mt {
  margin-top: 30px;
  display: flex;
}
.uni-padding-wrap {
  padding: 0px 30px;
}
.content {
  display: flex;
  width: 100%;
  justify-content: center;
  align-items: center;
}
.orderbox {
  width: 100%;
  display: flex;
  flex-wrap: wrap;
  justify-content: space-around;
  margin-top: 20rpx;
  padding: 60rpx 10rpx 30rpx 30rpx;
  background-color: #fafafa;
  border-bottom: 5rpx solid #ffaa7f;
  align-items: center;
  box-shadow: -1.6px -1.6px 2.2px rgba(0, 0, 0, 0.02), -2.5px -2.5px 5.3px rgba(0, 0, 0, 0.028), -1.8px -1.8px 10px rgba(0, 0, 0, 0.035), 2.8px 2.8px 17.9px rgba(0, 0, 0, 0.042), 17.8px 17.8px 33.4px rgba(0, 0, 0, 0.05), 100px 100px 80px rgba(0, 0, 0, 0.07);
}
.orderbox .order-left {
  display: flex;
  justify-content: space-around;
  flex-direction: column;
  margin-left: 30rpx;
}
.orderbox .order-left text {
  font-size: 20px;
  width: 340rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
}
.orderbox .order-left .goods-price {
  font-GoodsName: 20rpx;
  color: #F44545;
}
.orderbox .order-left .orderID {
  border-top: 1px solid #c1c1c1;
}
.orderbox .order-right {
  margin-right: 50rpx;
}
.orderbox .order-bottom {
  width: 100%;
  display: flex;
  flex-wrap: wrap;
  padding: 20rpx 10rpx 0rpx 10rpx;
}
.orderbox .order-bottom button {
  line-height: 40px;
  width: 200rpx;
  height: 80rpx;
  margin-left: 50rpx;
}

