.goods-box {
  box-shadow: 6.4px 6.4px 1.7px rgba(0, 0, 0, 0.017), 12.5px 12.5px 4.3px rgba(0, 0, 0, 0.026), 18.8px 18.8px 8.5px rgba(0, 0, 0, 0.032), 26.9px 26.9px 15.8px rgba(0, 0, 0, 0.038), 42.2px 42.2px 31px rgba(0, 0, 0, 0.048), 100px 100px 80px rgba(0, 0, 0, 0.07);
}
.goods {
  line-height: 80rpx;
  background-color: #FFFFFF;
}
.goods-detail {
  width: 100%;
  display: flex;
  padding: 60rpx 15rpx 30rpx 30rpx;
  background-color: #fff;
  justify-content: space-between;
  border-bottom: 5rpx solid #e2e2e2;
  align-items: center;
}
.goods-detail .detail-left {
  display: flex;
}
.goods-detail .detail-left .goods-left {
  display: flex;
  align-items: center;
}
.goods-detail .GoodsName {
  display: flex;
  justify-content: space-around;
  flex-direction: column;
  margin-left: 30rpx;
}
.goods-detail .GoodsName text {
  width: 300rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
}
.goods-detail .GoodsName .goods-price {
  font-GoodsName: 20rpx;
  color: #F44545;
}
.goods-detail .detail-right {
  width: 30%;
}
.goods-detail .detail-right .subtract {
  border-radius: 30rpx 10rpx 10rpx 30rpx;
}
.goods-detail .detail-right text {
  width: 50rpx;
  line-height: 50rpx;
  text-align: center;
  display: inline-block;
  background-color: #F7F7F7;
  margin-right: 10rpx;
}
.goods-detail .detail-right .add {
  color: #FA4305;
  border-radius: 10rpx 30rpx 30rpx 10rpx;
  margin-right: 20rpx;
}
.goods-detail .detail-right .goods-del {
  margin-top: 30rpx;
  text-align: center;
}
.empty {
  position: relative;
  top: 220rpx;
  text-align: center;
  display: flex;
  align-items: center;
  flex-direction: column;
}
.empty-text {
  color: #808080;
  margin-bottom: 50rpx;
}
.empty-button {
  width: 300rpx;
  height: 90rpx;
  color: orange;
  border: 1rpx solid orange;
  text-align: center;
  line-height: 90rpx;
  border-radius: 48rpx;
}
.end {
  width: 100%;
  height: 90rpx;
  background-color: #fff;
  position: fixed;
  bottom: 0;
  left: 0;
  display: flex;
  align-items: center;
}
.end-left {
  width: 70%;
  display: flex;
  justify-content: space-between;
  padding: 0 30rpx;
}
.end-left .end-flex {
  display: flex;
  align-items: center;
}
.end-right {
  width: 30%;
  line-height: 90rpx;
  background-color: #F44545;
  text-align: center;
  color: #fff;
}

